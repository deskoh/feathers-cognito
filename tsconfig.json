{
  "include": [
    "src/index.ts",
    "src/typings.d.ts"
  ],
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es2017",
      "esnext.asynciterable"
    ],
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",

    /* Strict Type-Checking Options */
    "strict": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Module Resolution Options */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@test/*": [
        "test/*"
      ]
    },
    "esModuleInterop": true,
  }
}
